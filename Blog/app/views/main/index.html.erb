

<div class="d-inline-flex flex-row">
  <nav class="col-md-2 d-none d-md-block sidebar">
    <div class="sidebar-sticky">
      <p>Категории:</p>
      <ul class="nav flex-column">
        <% @categories.each do |category| %>
          <li class="nav-item">
            <a class="nav-link active" href="#">
              <%= category.name %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="d-flex flex-row flex-wrap" style="width: 100%">
    <% @posts.each do |post| %>
      <div class="card flex-md-row box-shadow h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <strong class="d-inline-block text-primary"> КАТЕГОРИЯ </strong>
          <h3 class="mb-0">
            <a class="text-dark" href="#"> <%= post.title %> </a>
          </h3>
          <div class="mb-1 text-muted"> <%= post.date_of_publication %>  </div>
          <p class="card-text mb-auto">Содержание поста. <%= post.content %></p>
          <a href="#">Подробнее</a>
        </div>
        <img class="card-img-right flex-auto d-none d-md-block card-img" src="static/images/no-image.png" alt="Card image cap">
      </div>
    <% end %>
  </div>

  <nav class="col-md-2 d-none d-md-block sidebar">
    <div class="sidebar-sticky">
      <p>Теги:</p>
      <ul class="nav flex-column">
        <% @tags.each do |tag|%>
          <li class="nav-item">
            <a class="nav-link active" href="#">
              <%= tag.name %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>